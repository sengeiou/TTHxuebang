<back-component></back-component>

<view class=' to_top'>
  <image src='{{uploadpath}}resource/{{res.totop}}' class='icon-50' bindtap='backtotop'></image>
</view>

<view style="" class="{{tanchuang==true?'tanchuang':''}}">
  <view class='' style='background:{{jginfo.bgcolor}}'>

    <view style='position:relative;'>
      <view style=' ' class=''>
        <swiper indicator-dots='true' autoplay='false' interval='5000' duration='200' circular='true' style='width:750rpx;height:444rpx;'>
          <swiper-item wx:for="{{jigouimg}}" wx:key="k">
            <view>
              <!-- mode="aspectFill"  bindtap='viewPhoto' -->
              <image src='{{uploadpath}}jigouimg/{{item.img}}?x-oss-process=style/test_img' bindtap='viewPhoto' id='{{uploadpath}}jigouimg/{{item.img}}' style='width:750rpx;height:444rpx;'></image>
            </view>
          </swiper-item>
        </swiper>
      </view>
    </view>


    <!-- {{model!="iPhone X "&&model!="iPhone XR "&&model!="iPhone XS "&&model!="iPhone XS Max "?"mid2":"mid"}} -->

    <view class="flex-row flex-column">

      <view wx:if='{{tanchuang==true}}' class='radius-10 bg-white padding-15    margin-bottom-10 mid'>


        <view class='padding-10 '>
          <view class='flex-row flex-center'>
            <view class='txt-black txt-bold  flex-1 chaochu'>{{jginfo.jigou}}</view>
            <image src="{{uploadpath}}resource/{{res.renzhen}}" class="icon-rz" wx:if='{{jginfo.renzhen_value=="Y"}}'></image>
          </view>

          <view class="starbox text-right margin-top-10">
            <view class="stars" style="width: 100%;">
              <view class=" ims">
                <image src="{{uploadpath}}resource/{{res.star_null}}" class="icon-star"></image>
                <image src="{{uploadpath}}resource/{{res.star_null}}" class="icon-star"></image>
                <image src="{{uploadpath}}resource/{{res.star_null}}" class="icon-star"></image>
                <image src="{{uploadpath}}resource/{{res.star_null}}" class="icon-star"></image>
                <image src="{{uploadpath}}resource/{{res.star_null}}" class="icon-star"></image>
              </view>
            </view>

            <view class="stars2" style="width: {{jginfo.pingfen==''?jginfo.scoring*20:jginfo.pingfen*20}}%">
              <view class="ims">
                <image src="{{uploadpath}}resource/{{res.star}}" class="icon-star"></image>
                <image src="{{uploadpath}}resource/{{res.star}}" class="icon-star"></image>
                <image src="{{uploadpath}}resource/{{res.star}}" class="icon-star"></image>
                <image src="{{uploadpath}}resource/{{res.star}}" class="icon-star"></image>
                <image src="{{uploadpath}}resource/{{res.star}}" class="icon-star"></image>
              </view>
            </view>

          </view>


          <view class='flex-row flex-center margin-top-10'>

            <view class='flex-row flex-1'>
              <view class=' biaoqian radius-10 txt-green h6 margin-5 text-center' style='border:1rpx solid  {{litem.color}};color:{{litem.color}}' wx:for="{{jginfo.labels}}" wx:key="k" wx:for-item='litem'>{{litem.name}}</view>
            </view>


            <!-- <view bindtap='fav' id='Y' wx:if="{{isfav=='N'}}" class='txt-primary  text-center  h6 padding-bottom-5' style='width:156rpx;line-height:48rpx;border-radius:35rpx;font-size:24rpx;border:2rpx solid #FFCD22;'>收藏</view>
            <view bindtap='fav' id='N' wx:if="{{isfav=='Y'}}" class='bg-primary text-center txt-white  h6' style='height:48rpx;width:156rpx;line-height:48rpx;border-radius:35rpx;font-size:24rpx;'>取消收藏</view> -->




          </view>

          <view class='flex-row flex-center margin-top-5 padding-10'>

            <view class='flex-row flex-column flex-1'>
              <!-- <image src="{{uploadpath}}resource/{{res.nianlin}}" class="icon-13"></image> -->
              <view class="txt-gray h6">适合年龄</view>
              <view class='h6 txt-black  txt-bold  margin-top-10 '>{{jginfo.jg_age}}</view>
            </view>

            <view class='flex-row flex-column flex-1'>
              <!-- <image src="{{uploadpath}}resource/{{res.shijian}}" class="icon-13"></image> -->
              <view class="txt-gray h6">营业时间</view>
              <view class='h6 txt-black txt-bold  margin-top-10  '>{{jginfo.time}}</view>
            </view>

            <view class='flex-row flex-column flex-1'>
              <!-- <image src="{{uploadpath}}resource/{{res.yuyue}}" class="icon-13"></image> -->
              <!-- <view class="txt-gray h6" >预约</view> -->
              <view class='h6 txt-gray '>需要预约</view>
              <view class='h6 txt-black txt-bold  margin-top-10'>{{jginfo.people_num}}人已预约</view>
            </view>

          </view>

          <view class='flex-row flex-center margin-top-10'>
            <view>
              <image class='icon-15 ' src='{{uploadpath}}resource/{{res.zuobiao}}'></image>
            </view>
            <view class='flex-1 h5 margin-left-10 txt-blue chaochu' bindtap='openMap' id="{{jginfo.address}}">{{jginfo.address}}</view>
            <view class='h6 txt-black txt-right txt-bold' style='width:150rpx;' wx:if="{{miletxt!=undefined}}">距你{{miletxt}}</view>
          </view>

        </view>

      </view>

      <view wx:if='{{trunoff==false}}'>
        <cover-view wx:if='{{tanchuang==false}}' class='radius-10 bg-white padding-15    margin-bottom-10 mid'>


          <cover-view class='padding-10 '>
            <cover-view class='flex-row flex-center'>
              <cover-view class='txt-black txt-bold  flex-1 chaochu'>{{jginfo.jigou}}</cover-view>
              <cover-image src="{{uploadpath}}resource/{{res.renzhen}}" class="icon-rz" wx:if='{{jginfo.renzhen_value=="Y"}}'></cover-image>
            </cover-view>


            <cover-view style="height:10rpx;"></cover-view>

            <cover-view class="starbox text-right  ">

              <!-- {{jginfo.pingfen==''?jginfo.scoring*20:jginfo.pingfen*20}} -->
              <cover-view class="stars_2" style="width:100%">
                <cover-view class="ims "  >
                  <cover-image src="{{uploadpath}}resource/{{res.star}}" class="icon-star"></cover-image>
                  <cover-image src="{{uploadpath}}resource/{{res.star}}" class="icon-star"></cover-image>
                  <cover-image src="{{uploadpath}}resource/{{res.star}}" class="icon-star"></cover-image>
                  <cover-image src="{{uploadpath}}resource/{{res.star}}" class="icon-star"></cover-image>
                  <cover-image src="{{uploadpath}}resource/{{res.star}}" class="icon-star"></cover-image>
                </cover-view>
              </cover-view>

              <cover-view class="hiddenblock" style="width:{{jginfo.pingfen==''?(100-jginfo.scoring*20):(100-jginfo.pingfen*20)}}%"></cover-view>

              <cover-view class="stars1 " style="width: 100%;">
                 <cover-view class="ims "  >
                  <cover-image src="{{uploadpath}}resource/{{res.star_null}}" class="icon-star"></cover-image>
                  <cover-image src="{{uploadpath}}resource/{{res.star_null}}" class="icon-star"></cover-image>
                  <cover-image src="{{uploadpath}}resource/{{res.star_null}}" class="icon-star"></cover-image>
                  <cover-image src="{{uploadpath}}resource/{{res.star_null}}" class="icon-star"></cover-image>
                  <cover-image src="{{uploadpath}}resource/{{res.star_null}}" class="icon-star"></cover-image>
                </cover-view>
              </cover-view>


            </cover-view>


            <cover-view class='flex-row flex-center  '>

              <cover-view class='flex-row flex-1'>
                <cover-view class=' biaoqian radius-10 txt-green h6 margin-5 text-center' style='border:1rpx solid  {{litem.color}};color:{{litem.color}}' wx:for="{{jginfo.labels}}" wx:key="k" wx:for-item='litem'>{{litem.name}}</cover-view>
              </cover-view>





            </cover-view>

            <cover-view class='flex-row flex-center margin-top-5 padding-10'>

              <cover-view class='flex-row flex-column flex-1'>
                <!-- <image src="{{uploadpath}}resource/{{res.nianlin}}" class="icon-13"></image> -->
                <cover-view class="txt-gray h6">适合年龄</cover-view>
                <cover-view class='h6 txt-black  txt-bold  margin-top-10 '>{{jginfo.jg_age}}</cover-view>
              </cover-view>

              <cover-view class='flex-row flex-column flex-1'>
                <!-- <image src="{{uploadpath}}resource/{{res.shijian}}" class="icon-13"></image> -->
                <cover-view class="txt-gray h6">营业时间</cover-view>
                <cover-view class='h6 txt-black txt-bold  margin-top-10  '>{{jginfo.time}}</cover-view>
              </cover-view>

              <cover-view class='flex-row flex-column flex-1'>
                <!-- <image src="{{uploadpath}}resource/{{res.yuyue}}" class="icon-13"></image> -->
                <!-- <view class="txt-gray h6" >预约</view> -->
                <cover-view class='h6 txt-gray '>需要预约</cover-view>
                <cover-view class='h6 txt-black txt-bold  margin-top-10'>{{jginfo.people_num}}人已预约</cover-view>
              </cover-view>

            </cover-view>

            <cover-view class='flex-row flex-center ' style="margin-top: 24rpx;">
              <cover-view>
                <cover-image class='icon-15 ' src='{{uploadpath}}resource/{{res.zuobiao}}'></cover-image>
              </cover-view>
              <cover-view class='flex-1 h5 margin-left-10 txt-blue chaochu' bindtap='openMap' id="{{jginfo.address}}">{{jginfo.address}}</cover-view>
              <cover-view class='h6 txt-black txt-right txt-bold' style='width:150rpx;' wx:if="{{miletxt!=undefined}}">距你{{miletxt}}</cover-view>
            </cover-view>

          </cover-view>

        </cover-view>
      </view>
    </view>

    <!-- <view wx:if='{{model!="iPhone X "&&model!="iPhone XR "&&model!="iPhone XS "&&model!="iPhone XS Max "}}' style='height:280rpx;'></view>

    <view wx:if='{{model=="iPhone X "||model=="iPhone XR "||model=="iPhone XS "||model=="iPhone XS Max "}}' style='height:340rpx;'></view> -->

    <!-- <view class="margin-top-20">a{{model}}b</view> -->

    <view class='margin-20 bg-white radius-10 shadow' wx:if='{{jginfo.novideosummary_value!="Y"}}'>

      <view class='flex-row flex-center  radius-10 padding-20'>
        <!-- <view class='bg-primary margin-left-10' style='height:38rpx;width:10rpx;'></view> -->
        <image src="{{uploadpath}}resource/{{res.jg_jianjie}}" class="icon_jianjie"></image>
        <view class='margin-left-10 txt-bold'>机构简介</view>
      </view>

      <view class='padding-20'>

        <video class='pos' bindfullscreenchange='bindfullscreenchange' wx:if='{{jginfo.jg_video!=""}}' style='width:100%;height:300rpx;' object-fit="contain" autoplay='{{false}}' loop='{{false}}' controls src='{{uploadpath}}mechanism/{{jginfo.jg_video}}'>
        </video>

        <image style='width:100%;height:300rpx;' mode='widthFix' wx:if='{{jginfo.jg_video==""&&jginfo.waitimg!=""}}' src='{{uploadpath}}mechanism/{{jginfo.waitimg}}?x-oss-process=style/test_img'></image>

        <!-- <view style='width:100%;height:300rpx; ' class='bg-primary '>视频</view> -->
      </view>

      <view class="" style="margin-top:-30rpx;">

        <view style="padding:20rpx 40rpx 40rpx 40rpx;">
          <text decode="{{true}}" space="ensp" class='  h5 margin-top-20   {{more==true?"chaochu5 height-210 padding-20":" "}}' style="">{{jginfo.jieshao}}</text>
        </view>
        <view class="flex-row flex-column">
          <view class="txt-blue h5 margin-bottom-20 margin-top-10" wx:if='{{more==false}}' bindtap="showmore">查看更多</view>
          <view class="txt-blue h5 margin-bottom-20" wx:if='{{more==true}}' bindtap="shouqi">收起</view>
        </view>
      </view>


    </view>

    <!-- <image src='{{uploadpath}}mechanism/{{jginfo.longimg}} ' mode='widthFix' style='width:100vw'></image> -->


    <image src='{{uploadpath}}mechanism/{{jginfo.longimg}}?x-oss-process=style/test_img' mode='widthFix' style='width:100vw'></image>

    <view class='margin-20 margin-bottom-10 '>
      <view class='padding-20 flex-row radius-10  margin-top-20  mk' wx:for='{{courselist}}' wx:key='k' id='{{item.id}}' bindtap='tokcdetails' style='border:1rpx solid white '>

        <image class='kc_icon radius-10 ' src='{{uploadpath}}curriculum/{{item.kc_img}}?x-oss-process=style/test_img'></image>
        <view class='flex-row column   margin-left-20 flex-1'>
          <view class='txt-bold  flex-1' style='color:#000000'>{{item.name}}</view>

          <view class='flex-row flex-center'>

            <view wx:if="{{item.scoring==5}}" class='flex-row flex-center '>
              <image wx:for='{{5}}' src='{{uploadpath}}resource/{{res.star}}' class='margin-left-5' style='height:20rpx;width:20rpx;'></image>
            </view>

            <view wx:if="{{item.scoring==4}}" class='flex-row flex-center '>
              <image wx:for='{{4}}' src='{{uploadpath}}resource/{{res.star}}' class='margin-left-5' style='height:20rpx;width:20rpx;'></image>
              <image src='{{uploadpath}}resource/{{res.star_null}}' class='margin-left-5' style='height:20rpx;width:20rpx;'></image>
            </view>

            <view wx:if="{{item.scoring==3}}" class='flex-row flex-center '>
              <image wx:for='{{3}}' src='{{uploadpath}}resource/{{res.star}}' class='margin-left-5' style='height:20rpx;width:20rpx;'></image>
              <image wx:for='{{2}}' src='{{uploadpath}}resource/{{res.star_null}}' class='margin-left-5' style='height:20rpx;width:20rpx;'></image>
            </view>

            <view wx:if="{{item.scoring==2}}" class='flex-row flex-center '>
              <image wx:for='{{2}}' src='{{uploadpath}}resource/{{res.star}}' class='margin-left-5' style='height:20rpx;width:20rpx;'></image>
              <image wx:for='{{3}}' src='{{uploadpath}}resource/{{res.star_null}}' class='margin-left-5' style='height:20rpx;width:20rpx;'></image>
            </view>

            <view wx:if="{{item.scoring==1}}" class='flex-row flex-center '>
              <image src='{{uploadpath}}resource/{{res.star}}' class='margin-left-5' style='height:20rpx;width:20rpx;'></image>
              <image wx:for='{{4}}' src='{{uploadpath}}resource/{{res.star_null}}' class='margin-left-5' style='height:20rpx;width:20rpx;'></image>
            </view>


            <view class='h6 flex-1 margin-left-20 txt-primary'>{{item.people_num}}人购课</view>
          </view>

          <view class='flex-row flex-center flex-1' style=''>


            <view class='flex-row flex-center flex-1'>
              <image src='{{uploadpath}}resource/{{res.age_icon}}' class='icon-10'></image>
              <view class='h6  margin-left-5' style='color:#000000'>{{item.age_name}}</view>
            </view>


            <view class='flex-row flex-center flex-1'>
              <image src='{{uploadpath}}resource/{{res.keshi}}' class='icon-10'></image>
              <view class='h6  margin-left-5' style='color:#000000'>{{item.class_hours}}节课</view>
            </view>


            <view class='flex-row flex-center flex-1'>
              <image src='{{uploadpath}}resource/{{res.time}}' class='icon-10'></image>
              <view class='h6  margin-left-5' style='color:#000000'>{{item.duration}}/节</view>
            </view>

          </view>

          <view class='flex-row flex-center flex-1'>
            <image class='icon-10  ' src='{{uploadpath}}resource/{{res.jg_icon}}'></image>
            <view class='h6 flex-1 txt-white margin-left-5 chaochu' style='color:#AAAAAA'>{{item.JG_jigou}}</view>
            <view class=' txt-red txt-bold'>￥{{item.zuidijia}}</view>
          </view>

          <view class='flex-row flex-center'>
            <view class='h6  flex-1 chaochu' style='color:#AAAAAA'>{{item.JG_showaddress}}</view>
            <view class='h6  txt-bold ' style=' '>{{item.miletxt}}</view>
          </view>

        </view>


      </view>
    </view>

    <view class='flex-row flex-center ' style="margin-top:68rpx;margin-bottom:22rpx;">

      <image src="{{uploadpath}}resource/{{res.cainixihuan}}" class="" style="width:100vw;height:120rpx;"></image>

    </view>



    <view class='flex-row flex-center flex-wrap'>
      <view bindtap='kechenxianqin' data-id='{{item.id}}' class='kecheng-block' wx:for='{{ketang}}' wx:key='k'>

        <view style=''>
          <image class='kecheng-img' src='{{uploadpath}}onlineclassroom/{{item.img}}'></image>
        </view>

        <view class='padding-12'>
          <view class=' txt-bold chaochu'>{{item.name}}</view>
          <view class='flex-row flex-center margin-top-14'>
            <view class='flex-row flex-center'>
              <image src='{{uploadpath}}resource/{{res.nianlin}}' class='icon-16 '></image>
              <view class=' f20 margin-left-10'>{{item.age_name}}</view>
            </view>

            <view class='flex-row flex-center margin-left-26'>
              <image src='{{uploadpath}}resource/{{res.zhanjie}}' class='icon-16 '></image>
              <view class=' f20 margin-left-10'>共{{item.chapter_num}}集</view>
            </view>
          </view>



        </view>

        <view class='margin-left-10 dd flex-row flex-center margin-top-12'>
          <view class='margin-top-4 f20 txt-gray flex-1 '>{{item.learning_num}}人学过</view>
          <view class='margin-top-4 f20 txt-gray xhx'>￥{{item.originalprice}}</view>
          <view class='margin-top-4 h6 txt-red margin-left-6'>￥</view>
          <view class=' txt-red xg' style=''>{{item.price}}</view>
        </view>

        <!-- <view wx:if="{{item.isfree_value=='Y'&&item.idd=='N'}}" class='margin-left-10 flex-row flex-center margin-top-12'>
      <view class='margin-top-4 f20 txt-gray  flex-1 '>{{item.learning_num}}人学过</view>
      <view class="mianfei">免费课程</view>
    </view>

    <view wx:if="{{item.idd!='N'}}" class='margin-left-10 flex-row flex-center margin-top-12'>
      <view class='margin-top-4 f20 txt-gray  flex-1 '>{{item.learning_num}}人学过</view>
      <view class="yigou">已购</view>
    </view> -->


      </view>
    </view>

    <view class='flex-row flex-center ' style="margin-top:48rpx;margin-bottom:42rpx;">
      <view class="flex-1"></view>
