        查看更多
      </view>
      <view class="flex-1"></view>
    </view>

    <!-- <view class='height-100 '></view> -->

    <view class="flex-row flex-center padding-T-B-28">
      <view class="flex-1"></view>
      <image src='{{uploadpath}}resource/{{res.under_icon}} ' class=' ' style='width:150rpx;height:60rpx; margin-bottom:-10rpx;'></image>

      <view class="flex-1"></view>
    </view>

    <view style="height:50rpx;"></view>


