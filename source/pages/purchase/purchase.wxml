  <view style='height:120rpx;'></view>
</view>

<view class='fixedbottom'>

  <view class='flex-row flex-center bg-white ' style='border-top:2rpx solid #e5e5e5'>
    <view class='flex-2 txt-red txt-bold padding-30'>总计 ￥ {{courseinfo.price}}</view>
    <!-- <view class='txt-black '>共1个课程</view> -->
    <view class='flex-1 txt-black txt-bold  bg-red txt-white padding-30 text-center' style='width:276rpx;' bindtap='bindtoorder'>提交订单</view>
  </view>

</view>



<view class="modal-mask" bindtap="hideModal" wx:if="{{isxueyuan}}" catchtouchmove="preventTouchMove"></view>
<view class="modal-dialog" wx:if="{{isxueyuan}}">
  <view class="padding-20 margin-left-20 flex-row flex-center">
    <view class="flex-1"></view>
    <view class="h5 txt-bold " style="color:#222222">选择学员</view>
    <view class="flex-1"></view>
    <view bindtap="hideModal" class='h5' style="color:#AAAAAA">x</view>
  </view>
  <view wx:for="{{xueyuanlist}}" wx:for-index='idx' data-idx="{{idx}}" data-id="{{item.id}}" wx:key="k" class="margin-10" bindtap="xuanze">
    <view class="flex-row flex-center padding-40">
      <image wx:if="{{xuanzexueyuan.id!=item.id}}" class="radius-50 icon-17" mode="widthFix" src="{{uploadpath}}resource/{{res.weixuan}}"></image>
      <image wx:if="{{xuanzexueyuan.id==item.id}}" class="radius-50 icon-17" mode="widthFix" src="{{uploadpath}}resource/{{res.xuanzhong}}"></image>
      <image wx:if="{{item.sex=='nv'}}" class="radius-50 icon-60" src="{{uploadpath}}resource/{{res.nvtou}}"></image>

      <image wx:if="{{item.sex=='nan'}}" class="radius-50 icon-60" src="{{uploadpath}}resource/{{res.nantou}}"></image>

      <view class="margin-left-20">
        <view class="flex-row flex-center">
          <view class="f15 txt-bold">{{item.name}}</view>
          <view wx:if="{{item.sex=='nan'}}" class="nande">{{item.sui}}岁</view>
          <view wx:if="{{item.sex=='nv'}}" class="nvde">{{item.sui}}岁</view>
        </view>
        <view class="h6 margin-top-20" style="color:#999999">{{item.shouji}}</view>
      </view>
      <view class="flex-1"></view>
      <image data-id="{{item.id}}" catchtap="xianqin" src="{{uploadpath}}resource/{{res.fghy}}" mode="widthFix" class="icon-17"></image>

    </view>


  </view>

  <view bindtap='tianjia' class="flex-row margin-top-20">
    <view class="flex-1"></view>
    <view class="tuan_btn  text-center  ">
      添加孩子

    </view>

    <view class="flex-1"></view>
  </view>
  <view class="height-50"></view>
</view>