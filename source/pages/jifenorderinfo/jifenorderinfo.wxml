<!--pages/shopinfo/shopinfo.wxml-->
<block wx:if="{{info!=undefined}}">

  <view class="top_block flex-row flex-center ">

    <image wx:if='{{info.orderstatus=="A"}}' src="{{uploadpath}}resource/{{res.huowu}}" class="icon-huowu" style="margin-left:104rpx"></image>
    <image wx:if='{{info.orderstatus=="B"}}' src="{{uploadpath}}resource/{{res.baiche}}" class="icon-huowu" style="margin-left:104rpx"></image>
    <image wx:if='{{info.orderstatus=="C"}}' src="{{uploadpath}}resource/{{res.wanc}}" class="icon-huowu" style="margin-left:104rpx"></image>
    <view class="txt-white margin-left-20">
      {{info.orderstatus_name}}
    </view>
  </view>

  <view class="bg-white">

    <view class="mid_block flex-row flex-center">
      <image src="{{uploadpath}}resource/{{res.diz}}" class="icon-zuobiao" style="margin-left:40rpx"></image>
      <view class="flex-row column flex-1" style="margin-left:30rpx">
        <view class="h5">收货人：{{info.consignee}} {{info.mobile}}</view>
        <view class="h5 txt-6">{{info.address}}</view>
      </view>
    </view>



  </view>




  <view class="shangpin margin-top-20 ">

    <navigator class="flex-row margin-left-28" url="/pages/shopmalldetail/shopmalldetail?id={{info.goods_id}}">
      <image src="{{uploadpath}}shop/{{info.img}}" class="icon-img"></image>
<view class=" flex-1" style="margin-left:36rpx;margin-right:36rpx;">
      <view class="txt-bold" style="height:120rpx">{{info.name}}</view>
      <view class="text-center"  wx:if="{{info.goods_label!=''&&info.goods_istopvalue=='Y'}}" style='border-raduis:4rpx;width:80rpx;border:1px solid {{info.goods_labelcolor}};font-size:20rpx;border-radius:4rpx;color:{{info.goods_labelcolor}};margin-top:6rpx;'>{{info.goods_label}}</view>
    </view>
      <view class="flex-row column">
        <view class="h6" wx:if="{{info.paytype!='X'}}">{{info.danjia}} 积分</view>
        <view class="h6" wx:if="{{info.paytype=='X'}}">¥{{info.payamount}}</view>
        <view class="h6 text-right" style="color:#B0B0B0">x{{info.shuliang}}</view>
      </view>
    </navigator>

    <view class="flex-row flex-center margin-left-28 margin-top-10">
      <view class="h6 flex-1">运费（快递）</view>
      <view class="h6">￥0.00</view>
    </view>

    <view class="margin-left-28 margin-top-10" style="height:2rpx;background:#F5F5F5"></view>

    <view class="flex-row flex-bottom margin-left-28 margin-top-10" wx:if="{{info.paytype!='X'}}">
      <view class="txt-bold h5 flex-1">使用积分</view>
      <view style="color:#FFBA12" class="h5 txt-bold">{{info.jifen}} 积分</view>
    </view>
    <view class="flex-row flex-center margin-left-28 margin-top-10" wx:if="{{info.paytype=='X'}}">
      <view class="txt-bold h5 flex-1">购买金额</view>
      <view style="color:#FFBA12" class="h7 txt-bold">¥</view>
      <view style="color:#FFBA12" class="h5 txt-bold">{{info.payamount}} </view>
    </view>





  </view>


  <view class="bottom_block margin-top-20">
    <view class="flex-row flex-center margin-left-28 ">
      <view class="h5 width-56">订单号</view>
      <view class="h5 margin-left-52">{{info.orderid}}</view>
    </view>

    <view class="margin-left-28 margin-top-10" style="height:2rpx;background:#F5F5F5"></view>

    <view class="flex-row flex-center margin-left-28 margin-top-10">
      <view class="h5 width-56">支付方式</view>
      <view class="h5 margin-left-52">{{info.paytype!='X'?'积分':'微信支付'}}</view>
    </view>

    <view class="margin-left-28 margin-top-10" style="height:2rpx;background:#F5F5F5"></view>

    <view class="flex-row flex-center margin-left-28 margin-top-10">
      <view class="h5 width-56">下单时间</view>
      <view class="h5 margin-left-52">{{info.created_date}}</view>
    </view>
  </view>


  <view style="height:140rpx"></view>


  <!-- <view class="bottom" id="{{info.id}}"  bindtap="towuliu"  wx:if='{{info.orderstatus=="B"||info.orderstatus=="C"}}'>
  <view class="flex-row flex-center">
    <view class="flex-1"></view>
    <view class="btn text-center margin-top-10 margin-right-28">
      查看物流
    </view>
  </view>
</view> -->

  <view class="bottom" wx:if='{{info.orderstatus!="A"}}'>
    <view class="flex-row flex-center">
      <view class="flex-1"></view>

      <view wx:if='{{info.orderstatus=="B"}}' id="{{info.id}}" bindtap="shouhuo" class="btn text-center margin-top-10 margin-right-28">
        确认收货
      </view>

      <view wx:if='{{info.orderstatus=="C"}}' id="{{info.id}}" bindtap="shouhou" class="btn text-center margin-top-10 margin-right-28">
        商品售后
      </view>
    </view>
  </view>

</block>


<view class="bg" wx:if="{{showshouhou==true}}" >
  <view class="flex-row flex-center h100">
    <view class="flex-1 h100" ></view>
    <view class="sel">
      <view class="text-center t0">
        请添加学榜微信客服进行售后
      </view>
      <view class="flex-row flex-bottom t1">
        <view class="flex-1"></view>
        <view class="txt-price">微信ID：xuebanggz</view>
        <view class="flex-1"></view>
      </view>
      <view class="flex-row flex-center t2">
        <view class="flex-1 text-center qr" bindtap="fz">复制微信号</view>
        <view class="gehe"></view>
        <view class="flex-1 text-center qx" bindtap="qx">取消</view>
      </view>
    </view>
    <view class="flex-1 h100" ></view>
  </view>
</view>