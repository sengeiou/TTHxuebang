/* pages/ceshi/ceshi.wxss */

.bors {
  border: 2rpx solid black;
}

.aaa {
  height: 100rpx;
  width: 100rpx;
}

.sig-qiu {
  width: 190rpx;
  height: 190rpx;
  position: absolute;
  left: 50%;
  top: 40rpx;
  transform: translateX(-50%);
  background-repeat: no-repeat;
  background-size: cover;
  text-align: center;
}

.sig-qiu .ti {
  color: #fff;
  font-size: 36rpx;
  display: inline-block;
  margin-top: 65rpx;
}

.new-week {
  width: auto;
  height: auto;
  overflow: hidden;
  margin-top: 30rpx;
}

.we-mod {
  width: 100%;
}

.mo-fen {
  width: 100%;
  overflow: hidden;
  position: relative;
  margin-bottom: 10rpx;
}

.mo-fen .f {
  height: 34rpx;
  line-height: 34rpx;
  padding: 0 14rpx;
  border-radius: 20rpx;
  background-color: #ffcc51;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
}

.mo-fen .f.f1 {
  margin-left: 0;
}

.mo-fen .f.f2 {
  margin-left: 41%;
}

.mo-line {
  height: 26rpx;
  width: auto;
  margin: 0 40rpx;
  position: relative;
  margin-bottom: 15rpx;
}

.mo-line::after {
  content: "";
  width: 100%;
  height: 4rpx;
  background-color: #999999;
  position: absolute;
  left: 0;
  top: 4rpx;
}

.mo-line .q {
  width: 12rpx;
  height: 12rpx;
  border-radius: 100%;
  background-color: #999999;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
}

.mo-line .q:first-of-type {
  left: 0;
}

.mo-line .q:nth-of-type(2) {
  left: 12%;
}

.mo-line .q:nth-of-type(3) {
  left: 24%;
}

.mo-line .q:nth-of-type(4) {
  left: 36%;
}

.mo-line .q:nth-of-type(5) {
  left: 48%;
}

.mo-line .q:nth-of-type(6) {
  left: 60%;
}

.mo-line .q:nth-of-type(7) {
  left: 72%;
}

.mo-line  :last-of-type {
  left: auto;
  right: 0;
}

.mo-line .q.hover {
  background-color: #ffc200;
}

.mo-ri {
  width: auto;
  height: 30rpx;
  margin: 0 40rpx;
  position: relative;
}

.mo-ri .t {
  height: 30rpx;
  font-size: 24rpx;
  color: #999;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
}

.mo-ri .t:first-of-type {
  left: 0;
}

.mo-ri .t:nth-of-type(2) {
  left: 12%;
}

.mo-ri .t:nth-of-type(3) {
  left: 24%;
}

.mo-ri .t:nth-of-type(4) {
  left: 36%;
}

.mo-ri .t:nth-of-type(5) {
  left: 48%;
}

.mo-ri .t:nth-of-type(6) {
  left: 60%;
}
.mo-ri .t:nth-of-type(7) {
  left: 72%;
}

.mo-ri :last-of-type {
  left: auto;
  right: 2rpx;
}
