<!--pages/pingceindex/pingceindex.wxml-->

<view class='top-img' style='background-image:url({{uploadpath}}pingceindex/{{info.indeximg}});background-size:100% 100%;'>
 
</view>


<view class='mid-block bg-white padding-20 radius-8'>

  <view class='flex-row flex-center'>
    <view class='huangtiao'></view>
    <view class='h5 txt-bold margin-left-16'>测试简介</view>
  </view>

  <text class='margin-top-24 h6 txt-6' style=''>
    {{info.jianjie}}
  </text>



  <view class='flex-row flex-center margin-top-30'>
    <view class='flex-1'></view>

    <view class='flex-row flex-column'>
      <view class='quan radius-50 flex-row flex-column '>
        <view class='flex-1'></view>
        <view class='h7' style='color:#B4B4B4'>平均</view>
        <view style='color:#B71B93'>{{info.zhunque}}</view>
        <view class='flex-1'></view>
      </view>
      <view class='margin-top-24 h5'>测试准确度</view>
    </view>

    <view class='flex-1'></view>

    <view class='flex-row flex-column'>
      <view class='quan radius-50 flex-row flex-column '>
        <view class='flex-1'></view>
        <view class='h7' style='color:#B4B4B4'>平均</view>
        <view style='color:#B71B93'>{{info.shiyon}}</view>
        <view class='flex-1'></view>
      </view>
      <view class='margin-top-24 h5'>建议实用性</view>
    </view>

    <view class='flex-1'></view>

    <view class='flex-row flex-column'>
      <view class='quan radius-50 flex-row flex-column '>
        <view class='flex-1'></view>
        <view class='h7' style='color:#B4B4B4'>平均</view>
        <view style='color:#B71B93'>{{info.yidong}}</view>
        <view class='flex-1'></view>
      </view>
      <view class='margin-top-24 h5'>题目易懂性</view>
    </view>

    <view class='flex-1'></view>
  </view>

</view>


<view class='bottom-block bg-white padding-20 radius-8'>

  <view class='flex-row flex-center'>
    <view class='huangtiao'></view>
    <view class='h5 txt-bold margin-left-16'>测评须知</view>
  </view>

  <text class='margin-top-14 h6 txt-6' style=''>
     {{info.xuzhi}}
  </text>
  


</view>

<view class='height-126'></view>

<view class='flex-row flex-center' bindtap='todati'>
  <view class='flex-1'></view>
  <view class='ceshi text-center txt-white'>立即测试</view>
  <view class='flex-1'></view>
</view>

<view class='height-52'></view>







<view class='UD' hidden='{{true}}'>
 


 <view class="container">
     <view class='progress_box'>
        <canvas class="progress_bg"     canvas-id="canvasProgressbg">  </canvas> 
        <canvas class="progress_canvas"     canvas-id="canvasProgress">  </canvas> 
        <view class="progress_text">
            <view class="progress_dot"></view> 
            <text class='progress_info'> {{progress_txt}}</text>
        </view>     
    </view>
</view>



</view>