<view class='padding-bottom-20' wx:if='{{shows=="finished"}}'>

  <view wx:if="{{coursevlist.length==0}}">
    <view class='flex-row text-center'>
      <view class='flex-1'>

      </view>

      <view>

        <view class='nofound-img'>
          <image style='width:30vw;margin-top:100rpx;margin-bottom:40rpx;' mode='widthFix' src='{{uploadpath}}resource/{{res.nofound}}'></image>
        </view>
        <view class='h5 txt-gray'>
          未找到您需要的课程
        </view>
      </view>
      <view class='flex-1'>

      </view>
    </view>
  </view>




  <view bindtap='tokcdetails' id='{{item.id}}' class='padding-20 flex-row bg-white kecheng radius-10 shadow' wx:for='{{coursevlist}}' wx:key='k'>
    <image class='kc_icon radius-10 ' lazy-load='{{true}}' src='{{uploadpath}}curriculum/{{item.kc_img}}'></image>
    <view class='flex-row column   margin-left-20 flex-1'>
      <view class='txt-bold txt-black flex-1 chaochu'>{{item.name}}</view>

      <view class='flex-row flex-center'>

                  <view class="starbox text-right">
                    <view class="stars" style="width: 100%;">
                     <view class=" ims">
                      <image src="{{uploadpath}}resource/{{res.star_null}}" class="icon-star"></image>
                      <image src="{{uploadpath}}resource/{{res.star_null}}" class="icon-star"></image>
                      <image src="{{uploadpath}}resource/{{res.star_null}}" class="icon-star"></image>
                      <image src="{{uploadpath}}resource/{{res.star_null}}" class="icon-star"></image>
                      <image src="{{uploadpath}}resource/{{res.star_null}}" class="icon-star"></image>
                     </view>
                    </view>

                    <view class="stars2" style="width: {{item.pingfen==''?item.scoring*20:item.pingfen*20}}%">
                     <view class="ims">
                      <image src="{{uploadpath}}resource/{{res.star}}" class="icon-star"></image>
                      <image src="{{uploadpath}}resource/{{res.star}}" class="icon-star"></image>
                      <image src="{{uploadpath}}resource/{{res.star}}" class="icon-star"></image>
                      <image src="{{uploadpath}}resource/{{res.star}}" class="icon-star"></image>
