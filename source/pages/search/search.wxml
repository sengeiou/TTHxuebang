    </view>

    <view class='flex-row flex-column '>
      <view class='radius-10 bg-white  mid margin-bottom-10'>

        <view class='padding-20 '>

          <view class='flex-row flex-center'>


            <view class="flex-row flex-center flex-1 ">
              <view class='txt-black txt-bold  chaochu' style="max-width:400rpx;">{{item.jigou}}</view>
              <image  wx:if="{{item.renzhen=='是'}}" src="{{uploadpath}}resource/{{res.renzheng}}" class="icon13 margin-left-10"></image>
            </view>

              <view class="starbox text-right">
