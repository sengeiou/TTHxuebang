        <view class='flex-1 flex-row flex-column' bindtap='bindshow' data-type='wc'>
          <view class='txt-bold  flex-1 h5 padding-10 margin-bottom-5 {{show=="finished"?"txt-primary":""}} txt-black'>已购买</view>
