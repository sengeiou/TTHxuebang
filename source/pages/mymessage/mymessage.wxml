<!--pages/mymessage/mymessage.wxml-->
<view wx:for='{{wclist}}' wx:key='k' id='{{item.id}}' class='flex-row bg-white  margin-top padding-30 shadow ' bindtap='bindtoinfo'>
  <image class='icon-75 radius-10' src='{{uploadpath}}curriculum/{{item.course_kc_img}}'></image>
  <view class='flex-row column flex-1 margin-left-10'>

    <view class='flex-row flex-center'>
      <view class='txt-black flex-1'>交易消息</view>
      <view class='h6'>{{item.created_date}}</view>
    </view>

    <view class='h6 margin-top-5' style='color:#AAAAAA;'>
      您已成功购买了{{item.course_id_name}}课程，付款金额{{item.amount}}元。
    </view>

    <view class='' style='height:32rpx;'></view>

    <view class='flex-row flex-center'>
      <view class='flex-1'></view>
      <view class='h6' style='color:#AAAAAA;'>查看详情 ></view>
    </view>

  </view>
</view>

