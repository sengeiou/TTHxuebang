<!--pages/order/order.wxml-->
<view class='height-30'></view>
<view class='flex-row flex-column ' wx:if="{{info.pstatus=='W'}}">


  <view style='color:#FFC200' class='txt-bold'>等待支付</view>
  <view style='color:#FFC200' class='txt-bold'>剩余支付时间{{mHour}}:{{mMinute}}:{{mSecond}}</view>
  <view>
    <button bindtap='bindpay'>支付</button>
  </view>

</view>

<view class='flex-row flex-column ' wx:if="{{info.pstatus=='P'}}">

  <view style='color:#FFC200' class='txt-bold'>支付成功</view>

  <view class='height-20'></view>

  <image src='{{uploadpath}}resource/{{res.ok_order}}' class='icon-75'></image>

  <view class='height-20'></view>

  <view class='h6 txt-gray'>感谢您对学榜的信任，期待再次购买</view>

  <view class='height-20'></view>


  <view style='background:#50B674' class='flex-row flex-column padding-20 radius-10'>
    <view class='txt-white '>核销码</view>
    <image  class='txt-white h3' mode="widthFix" id='{{info.usecode}}' bindtap='copytext' src='{{apiurl}}jigou/qrcode?id={{info.id}}&a.jpg'></image>
    <view class='txt-white '>机构老师微信号</view>
    <view class='flex-row flex-center ' style='width:100%'>
      <view class='flex-1'></view>
      <view class=' txt-bold txt-white flex-1 h5 '>{{courseinfo.teachername}}</view>
      <view class='radius-10 h7 txt-white text-center ' style='border:2rpx solid white;height:48rpx;width:120rpx;line-height:48rpx;' id='{{courseinfo.teacherwechatid}}' bindtap='copytext'>点击复制</view>
    </view>
    <view class='height-20'></view>
    <view class='flex-row flex-center '>
      <view class='  txt-white flex-1 h6'>添加微信号 > 联系机构老师 > 确定上课时间</view>
    </view>
  </view>

  <view class='flex-row flex-center padding-30;'>
    <view style='width:320rpx;height:80rpx;line-height:80rpx;' class='bg-primary radius-10 txt-white text-center h6'>联系学榜客服</view>
    <view style='width:20rpx;height:20rpx;'></view>
    <navigator url='/pages/kcdetails/kcdetails?id={{courseinfo.id}}' style='width:320rpx;height:80rpx;line-height:80rpx;' class='bg-primary radius-10 txt-white text-center h6'>继续购课</navigator>
  </view>

</view>


<view class='flex-row flex-column ' wx:if="{{info.pstatus=='C'}}">
  15分钟未支付已取消
</view>



<view class='flex-row flex-column ' wx:if="{{info.pstatus=='U'}}">
  核销码已使用
</view>



<view class='flex-row flex-column ' wx:if="{{info.pstatus=='R'}}">
  申请退款中
</view>


<view class='flex-row flex-column ' wx:if="{{info.pstatus=='F'}}">
  退款成功
</view>

<view class='flex-row flex-column ' wx:if="{{info.pstatus=='S'}}">
  完成购买
</view>


<view class=''>
  <view class=' padding-left-20 bg-white bor_bot bor_top' style=''>
    <view class='flex-row flex-center padding-20 bor_bot' style=''>

      <view class='txt-black '>订单信息</view>
    </view>

    <view class='flex-row flex-center  padding-20 bor_bot' style=''>

      <image class='icon-50 radius-10' src='{{uploadpath}}resource/{{res.ceshi}}'></image>

      <view class='flex-1 flex-row column margin-left-20'>
        <view class='flex-row flex-center'>
          <view class=' txt-black txt-bold'>{{courseinfo.name}}</view>
        </view>
        <view class='margin-top-5 txt-gray h5'>{{courseinfo.type_typename}}</view>
      </view>

      <view class='txt-black '>￥{{info.amount}}</view>

    </view>

    <view class='flex-row flex-center padding-20 bor_bot' style=''>
      <view class='flex-1'></view>
      <view class='txt-black txt-bold margin-left-20'>实付 ￥ {{info.amount}}</view>
    </view>

    <view class='flex-row flex-center pd bor_bot' style=''>
      <view class='h5 flex-1'>订单号</view>
      <view class='txt-black h5  flex-3'>{{info.orderno}}</view>
      <view class='radius-10 h7  text-center margin-right-40' style='border:2rpx solid black;height:48rpx;width:120rpx;line-height:48rpx;' id='{{info.orderno}}' bindtap='copytext'>点击复制</view>
    </view>

    <view class='flex-row flex-center pd bor_bot' style=''>
      <view class=' h5 flex-1'>支付方式</view>
      <view class='txt-black  flex-4  h5'>线上支付</view>
      <view class='radius-10 h7  text-center margin-right-40' style='height:48rpx;width:10rpx;'></view>
    </view>

    <view class='flex-row flex-center pd bor_bot' style=''>
      <view class=' h5 flex-1'>下单时间</view>

      <view class='txt-black flex-4  h5 '>{{info.submit_time_formatting}}</view>
      <view class='radius-10 h7  text-center margin-right-40' style='height:48rpx;width:10rpx;'></view>
    </view>

    <view class='flex-row  pd ' style=''>
      <view class=' h5 flex-1'>备注</view>
      <view class='txt-black flex-4 h5 padding-right-40'>
        <text>
      {{info.usercomment}}
      </text>
      </view>
    </view>

    <view class='height-100'></view>



  </view>
</view>


<view class='height-100'></view>