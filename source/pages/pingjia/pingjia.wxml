<!--pages/pingjia/pingjia.wxml-->

<view class='bg-white'>
  <view class='kecheng flex-row  bor_bot  '>

    <image src='{{uploadpath}}resource/{{res.chengong}}' class='icon-img'></image>

    <view class='flex-row column  '>
      <view class='margin-left-40 txt-black h5'>课程评分</view>
      <view class='flex-row flex-center margin-top-24 margin-left-30 '>
        <image src='{{uploadpath}}resource/{{res.star}}' class='icon margin-10' wx:for='{{5}}'></image>
      </view>
    </view>

  </view>

  <view class='mid  '>
    <textarea class='write h5 txt-black' contenteditable="{{true}}" auto-height="{{true}}" placeholder='分享您的上课心得，让其他宝妈更好了解哟' style='width:92vw' placeholder-style='color:#CCCCCC' maxlength='-1'></textarea>

    <view class='height-150'></view>

    <view class='addimg'>
      <image src='{{uploadpath}}resource/{{res.addimg}}' class='icon56'></image>
    </view>
  </view>

  <view class='height-20 bg-gray'></view>

  <view class='jigou'>
    <view class='flex-row flex-center'>
      <image src='{{uploadpath}}resource/{{res.addimg}}' class='icon22'></image>
      <view class='margin-left-20 txt-black h5'>机构评分</view>
    </view>
    <view class='flex-row flex-center margin-top-40'>
      <view class=' txt-black flex-1 h5'>综合评分</view>
      <image src='{{uploadpath}}resource/{{res.star}}' class='icon margin-10' wx:for='{{5}}'></image>
    </view>
  </view>

</view>

<view class='submit flex-row bg-white'>
  <view class='flex-row flex-center flex-1 margin-left-28'>
    <image src='{{uploadpath}}resource/{{res.xuanzhong}}' class='icon-15' bindtap='check' data-ck='nm' wx:if='{{check==true}}'></image>
    <image src='{{uploadpath}}resource/{{res.weixuan}}' class='icon-15' bindtap='check' data-ck='bnm' wx:if='{{check==false}}'></image>
    <view class='txt-black h6 margin-left-10'>匿名评价</view>
  </view>

  <view style=' ' class='subbtn txt-white text-center'>提交评价</view>
</view>