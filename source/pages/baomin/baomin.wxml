            <view class="f-26 txt-bold margin-left-10" style="color:#555555;width:280rpx;">{{huodoninfo.activitySite}}</view>
          </view>



        </view>


      </view>



      <view class="toupiao">报名截止时间： {{huodoninfo.apply_endTime}} 23:59</view>

      <view class="padding-20  margin-top-20">
