  <view class="flex-row   flex-center">

    <view class="flex-1"></view>

    <view class="conten">

      <view class="padding-20 flex-row  ">

        <image src="{{uploadpath}}activity/{{huodoninfo.activity_detail_top}}" style="width:220rpx;height:220rpx"></image>

        <view class="padding-20">
          <view class="flex-1"></view>
          <view class="txt-bold " style="width:350rpx;">{{huodoninfo.activityName}}</view>


          <view class="flex-row margin-top  flex-center">
            <view class="f-22" style="color:#555555" style="width:70rpx;">时间:</view>
            <view class="f-26 txt-bold margin-left-10" style="color:#555555;width:280rpx;"> {{huodoninfo.activityTime}}</view>
