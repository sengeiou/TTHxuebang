        <view class='padding-mid' style=''>
          <view class='flex-row flex-center '>
            <view class='jl' style='color:#FF5252'>*</view>
            <view class='font-30   txt-black margin-left-10 width-210'>节目名称：</view>
            <input class='  ' placeholder-class='pc' name='jigou' bindinput="minchen"  style='' placeholder='请填写节目名称'></input>
          </view>
        </view>
        <view class='padding-mid' style=''>
          <view class='flex-row flex-center '>
            <view class='jl' style='color:#FF5252'>*</view>
            <view class='font-30   txt-black margin-left-10 width-210'>节目人数：</view>
            <input class='  ' placeholder-class='pc' bindinput="renshu" name='jigou' style='' placeholder='请填写节目人数'></input>
          </view>
        </view>
        <view class='padding-mid' style=''>
          <view class='flex-row flex-center '>
            <view class='jl' style='color:#FF5252'>*</view>
            <view class='font-30   txt-black margin-left-10 width-210'>带队老师：</view>
            <input class='  ' placeholder-class='pc' bindinput="laoshi" name='jigou' style='' placeholder='请填写带队老师'></input>
          </view>
        </view>
        <view class='padding-mid' style=''>
          <view class='flex-row flex-center '>
            <view class='jl' style='color:#FF5252'>*</view>
            <view class='font-30   txt-black margin-left-10 width-210'>联系方式：</view>
            <input class='  ' placeholder-class='pc' name='jigou' bindinput="lianxifanshi" style='' placeholder='请填写联系方式'></input>
          </view>
        </view>

   
     <picker  range="{{saiqu}}" value="{{saiqu[index].name}}"  range-key="{{'name'}}" bindchange="bindsaiquChange">
        <view class='padding-mid' style=''>
          <view class='flex-row flex-center '>
            <view class='jl' style='color:#FF5252'>*</view>
            <view class='font-30   txt-black margin-left-10 width-210'>报名赛区：</view>
            <view wx:if="{{index==undefined}}" class="pc">请选择赛区</view>
             <view class="">{{saiqu[index].name}}</view>
             <view class="flex-1"></view>
               <image src="{{uploadpath}}resource/{{res.right_icon}}" mode="widthFix" class="icon-10"></image>
          </view>
        </view>
          </picker>
        <view class='padding-mid' style=''>
          <view class='flex-row flex-center '>
            <view class='jl' style='color:#FF5252'>*</view>
            <view class='font-30   txt-black margin-left-10 width-210'>所属机构：</view>
            <input class='  ' placeholder-class='pc' bindinput="jigou" name='jigou' style='' placeholder='请输入机构名称'></input>
          </view>
        </view>
        <view class='padding-mid' style=''>
          <view class='flex-row  '>
            <view class='jl' style='color:#FF5252'></view>
            <view class='font-30   txt-black margin-left-10 width-210'>参赛宣言：</view>
            <textarea class='  ' placeholder-class='pc' bindinput="xuanyan" name='jigou' style='' placeholder='请输入参赛宣言'></textarea>
          </view>
        </view>

        <view class='padding-mid' style=''>
          <view class='flex-row  '>
            <view class='jl' style='color:#FF5252'>*</view>
            <view class='font-30   txt-black margin-left-10 '>上传封面图片 (1张)</view>

          </view>

          <image src='{{uploadpath}}resource/{{res.addimgs}}' bindtap='jguploadimg' wx:if="{{fenmian==''}}" class='icon-img'></image>

